{
    "presets": [
        "es2015",
        "stage-1",
        "react"
    ],
    "env": { 
        "development": { 
            "plugins": [ 
                ["transform-decorators-legacy"],
                [ 
                    "react-transform", { 
                        "transforms": [{ 
                                "transform": "react-transform-hmr", 
                                "imports": [ "react" ], 
                                "locals": [ "module" ] 
                        }] 
                    }
                ]
             ]
         } 
    }
}